{
  "name": "valorize-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:landing": "turbo run dev --filter=landing",
    "preview:landing": "turbo run preview --filter=landing",
    "dev:dashboard": "turbo run dev --filter=dashboard",
    "dev:admin": "turbo run dev --filter=admin",
    "dev:shared": "turbo run dev --filter=@valorize/shared",
    "build": "turbo run build",
    "build:landing": "turbo run build --filter=landing",
    "build:dashboard": "turbo run build --filter=dashboard",
    "build:admin": "turbo run build --filter=admin",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^24.9.1",
    "prettier": "^3.6.2",
    "shadcn": "^3.5.0",
    "turbo": "^2.5.8",
    "typescript": "~5.8.3"
  },
  "packageManager": "pnpm@10.17.1",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "tailwindcss": "^4.1.16"
  }
}
