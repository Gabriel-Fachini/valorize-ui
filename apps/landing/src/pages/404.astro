---
import Layout from '../layouts/Layout.astro'
import { Navbar } from '../components/layout/Navbar'
import Footer from '../components/layout/Footer.astro'
import Container from '../components/ui/Container.astro'

const title = '404 - Página não encontrada | Valorize'
const description = 'A página que você está procurando não foi encontrada. Volte à página inicial e descubra como transformar a cultura da sua empresa.'
---

<Layout title={title} description={description} noindex={true}>
  <!-- Skip Navigation Link -->
  <a
    href="#main-content"
    class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:z-50 focus:px-4 focus:py-2 focus:bg-valorize-500 focus:text-zinc-950 focus:rounded-lg focus:shadow-lg focus:outline-none focus:ring-2 focus:ring-valorize-300"
    aria-label="Pular para o conteúdo principal"
  >
    Pular para o conteúdo principal
  </a>

  <Navbar client:load />

  <main id="main-content" class="min-h-screen flex items-center">
    <Container>
      <div class="text-center py-20">
        <!-- Error Code -->
        <div class="mb-8">
          <h1 class="text-9xl md:text-[12rem] font-bold text-transparent bg-gradient-to-br from-valorize-400 via-valorize-500 to-valorize-600 bg-clip-text leading-none">
            404
          </h1>
        </div>

        <!-- Error Message -->
        <div class="mb-12 max-w-2xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
            Oops! Página não encontrada
          </h2>
          <p class="text-lg text-zinc-300 leading-relaxed mb-8">
            A página que você está procurando não existe ou foi movida.
            Mas que tal descobrir como a <strong class="text-valorize-400">Valorize</strong> pode
            transformar a cultura da sua empresa?
          </p>
        </div>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
          <a
            href="/"
            class="inline-flex items-center justify-center rounded-xl font-semibold transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 h-12 px-6 text-lg bg-valorize-500 text-zinc-950 hover:bg-valorize-400 shadow-lg shadow-valorize-500/20 hover:shadow-xl w-full sm:w-auto hover:-translate-y-0.5"
          >
            <svg
              class="w-5 h-5 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Voltar ao início
          </a>

          <button
            onclick="window.history.back()"
            class="inline-flex items-center justify-center rounded-xl font-semibold transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 h-12 px-6 text-lg border border-zinc-600 bg-transparent text-zinc-100 hover:border-valorize-500 hover:text-valorize-500 w-full sm:w-auto hover:-translate-y-0.5"
          >
            <svg
              class="w-5 h-5 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Voltar
          </button>
        </div>

        <!-- Additional Help -->
        <div class="text-center">
          <p class="text-zinc-400 mb-4">
            Precisa de ajuda? Entre em contato conosco:
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center text-sm">
            <a
              href="mailto:contato@valorize.com"
              class="text-valorize-400 hover:text-valorize-300 transition-colors duration-200 flex items-center"
              aria-label="Enviar email para contato@valorize.com"
            >
              <svg
                class="w-4 h-4 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              contato@valorize.com
            </a>
            <span class="text-zinc-600 hidden sm:inline">&bull;</span>
            <a
              href="tel:+5511999999999"
              class="text-valorize-400 hover:text-valorize-300 transition-colors duration-200 flex items-center"
              aria-label="Ligar para +55 11 99999-9999"
            >
              <svg
                class="w-4 h-4 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              +55 11 99999-9999
            </a>
          </div>
        </div>

        <!-- Decorative Elements -->
        <div class="absolute inset-0 -z-10 overflow-hidden pointer-events-none">
          <!-- Gradient Orbs -->
          <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-valorize-500/10 rounded-full blur-3xl"></div>
          <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-valorize-600/10 rounded-full blur-3xl"></div>

          <!-- Additional gradient elements -->
          <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-gradient-to-r from-valorize-500/5 to-valorize-600/5 rounded-full blur-3xl"></div>
        </div>
      </div>
    </Container>
  </main>

  <Footer />
</Layout>

<style>
  /* Animation for the 404 number */
  h1 {
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  /* Enhance button hover effects */
  button:hover {
    transform: translateY(-2px);
  }

  /* Improve accessibility for high contrast mode */
  @media (prefers-contrast: high) {
    .text-zinc-300 {
      color: #ffffff;
    }

    .text-zinc-400 {
      color: #cccccc;
    }

    .border-zinc-600 {
      border-color: #ffffff;
    }
  }

  /* Reduce motion for users who prefer it */
  @media (prefers-reduced-motion: reduce) {
    h1 {
      animation: none;
    }

    button:hover {
      transform: none;
    }
  }
</style>
