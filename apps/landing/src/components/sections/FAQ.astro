---
import Container from '../ui/Container.astro'
import ArrowIcon from '../icons/ArrowIcon.astro'
import { content } from '../../constants/content'
---

<section class="py-20 bg-gray-50">
  <Container>
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
        Perguntas <span class="text-gradient">Frequentes</span>
      </h2>
      <p class="text-xl text-gray-600 leading-relaxed">
        Tire suas dúvidas sobre a plataforma Valorize
      </p>
    </div>
    
    <!-- FAQ Items -->
    <div class="max-w-4xl mx-auto space-y-4">
      {content.faq.map((item, index) => (
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <button 
            class="faq-trigger w-full text-left p-6 focus:outline-none focus:ring-2 focus:ring-brand-primary-500 focus:ring-inset"
            data-faq-index={index}
          >
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-gray-900 pr-4">
                {item.question}
              </h3>
              <div class="flex-shrink-0">
                <ArrowIcon 
                  className="text-gray-400 transition-transform duration-200 faq-arrow" 
                  direction="down" 
                  size={20} 
                />
              </div>
            </div>
          </button>
          
          <div class="faq-content hidden border-t border-gray-200">
            <div class="p-6 pt-4">
              <p class="text-gray-600 leading-relaxed">
                {item.answer}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Still have questions -->
    <div class="mt-16 text-center">
      <div class="bg-white rounded-2xl p-8 max-w-2xl mx-auto shadow-sm border border-gray-200">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">
          Ainda tem dúvidas?
        </h3>
        <p class="text-gray-600 mb-6">
          Nossa equipe está pronta para ajudar você a encontrar a melhor solução para sua empresa.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/contato"
            class="inline-flex items-center justify-center px-6 py-3 bg-gradient-brand text-white font-semibold rounded-lg hover:bg-gradient-brand-hover transition-all duration-200"
          >
            Falar Conosco
            <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </a>
          <a 
            href="mailto:contato@valorize.com"
            class="inline-flex items-center justify-center px-6 py-3 bg-white text-gray-700 font-semibold rounded-lg border border-gray-300 hover:bg-gray-50 transition-all duration-200"
          >
            contato@valorize.com
            <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </Container>
</section>

<script>
  // FAQ Accordion functionality
  document.addEventListener('DOMContentLoaded', () => {
    const faqTriggers = document.querySelectorAll('.faq-trigger')
    
    faqTriggers.forEach(trigger => {
      trigger.addEventListener('click', () => {
        const content = trigger.nextElementSibling as HTMLElement
        const arrow = trigger.querySelector('.faq-arrow') as HTMLElement
        const isOpen = !content.classList.contains('hidden')
        
        // Close all other FAQ items
        faqTriggers.forEach(otherTrigger => {
          if (otherTrigger !== trigger) {
            const otherContent = otherTrigger.nextElementSibling as HTMLElement
            const otherArrow = otherTrigger.querySelector('.faq-arrow') as HTMLElement
            otherContent.classList.add('hidden')
            otherArrow.style.transform = 'rotate(0deg)'
          }
        })
        
        // Toggle current FAQ item
        if (isOpen) {
          content.classList.add('hidden')
          arrow.style.transform = 'rotate(0deg)'
        } else {
          content.classList.remove('hidden')
          arrow.style.transform = 'rotate(180deg)'
        }
      })
    })
  })
</script>