---
import Container from '../ui/Container.astro'
import ArrowIcon from '../icons/ArrowIcon.astro'
import { content } from '../../constants/content'
---

<section class="py-20 bg-gray-50 dark:bg-gray-800">
  <Container>
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-6">
        Perguntas <span class="text-gradient">Frequentes</span>
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed">
        Tire suas dúvidas sobre a plataforma Valorize
      </p>
    </div>
    
    <!-- FAQ Items -->
    <div class="max-w-4xl mx-auto space-y-4">
      {content.faq.map((item, index) => (
        <div class="bg-white dark:bg-gray-700 rounded-xl shadow-sm border border-gray-200 dark:border-gray-600 overflow-hidden">
          <button 
            class="faq-trigger w-full text-left p-6 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-inset hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors"
            data-faq-index={index}
            aria-expanded="false"
            aria-controls={`faq-content-${index}`}
            id={`faq-button-${index}`}
          >
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white pr-4">
                {item.question}
              </h3>
              <div class="flex-shrink-0">
                <ArrowIcon 
                  className="text-gray-400 dark:text-gray-500 transition-transform duration-200 faq-arrow" 
                  direction="down" 
                  size={20} 
                />
              </div>
            </div>
          </button>
          
          <div 
            class="faq-content max-h-0 overflow-hidden transition-all duration-300 ease-in-out border-t border-gray-200 dark:border-gray-600 border-t-0"
            id={`faq-content-${index}`}
            aria-labelledby={`faq-button-${index}`}
            role="region"
          >
            <div class="p-6 pt-4">
              <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                {item.answer}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Still have questions -->
    <div class="mt-16 text-center">
      <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 max-w-2xl mx-auto shadow-sm border border-gray-200 dark:border-gray-700">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
          Ainda tem dúvidas?
        </h3>
        <p class="text-gray-600 dark:text-gray-300 mb-6">
          Nossa equipe está pronta para ajudar você a encontrar a melhor solução para sua empresa.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/contato"
            class="inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 text-white font-semibold rounded-lg transition-all duration-200"
          >
            Falar Conosco
            <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </a>
          <a 
            href="mailto:contato@valorize.com"
            class="inline-flex items-center justify-center px-6 py-3 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-200 font-semibold rounded-lg border border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-all duration-200"
          >
            contato@valorize.com
            <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </Container>
</section>

<script>
  // FAQ Accordion functionality
  document.addEventListener('DOMContentLoaded', () => {
    const faqTriggers = document.querySelectorAll('.faq-trigger')
    
    faqTriggers.forEach(trigger => {
      // Add keyboard support
      trigger.addEventListener('keydown', (e) => {
        const event = e as KeyboardEvent
        if (event.key === 'Enter' || event.key === ' ') {
          event.preventDefault()
          ;(trigger as HTMLElement).click()
        }
      })
      
      trigger.addEventListener('click', () => {
        const content = trigger.nextElementSibling as HTMLElement
        const arrow = trigger.querySelector('.faq-arrow') as HTMLElement
        const isOpen = content.style.maxHeight && content.style.maxHeight !== '0px'
        
        // Close all other FAQ items
        faqTriggers.forEach(otherTrigger => {
          if (otherTrigger !== trigger) {
            const otherContent = otherTrigger.nextElementSibling as HTMLElement
            const otherArrow = otherTrigger.querySelector('.faq-arrow') as HTMLElement
            otherContent.style.maxHeight = '0px'
            otherContent.style.borderTopWidth = '0px'
            otherArrow.style.transform = 'rotate(0deg)'
            otherTrigger.setAttribute('aria-expanded', 'false')
          }
        })
        
        // Toggle current FAQ item
        if (isOpen) {
          content.style.maxHeight = '0px'
          content.style.borderTopWidth = '0px'
          arrow.style.transform = 'rotate(0deg)'
          trigger.setAttribute('aria-expanded', 'false')
        } else {
          content.style.maxHeight = content.scrollHeight + 'px'
          content.style.borderTopWidth = '1px'
          arrow.style.transform = 'rotate(180deg)'
          trigger.setAttribute('aria-expanded', 'true')
        }
      })
    })
  })
</script>