---
import Container from '../ui/Container.astro'
import { content } from '../../constants/content'
---

<section class="relative min-h-screen flex items-center overflow-hidden pt-16 md:pt-0">
  <!-- Background with animated gradients -->
  <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-white to-purple-50/30 dark:from-gray-900 dark:via-gray-800 dark:to-purple-900/20"></div>
  
  <!-- Glassmorphism overlay pattern -->
  <div class="absolute inset-0 opacity-30">
    <div class="absolute top-1/4 left-1/4 w-72 h-72 bg-purple-500/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-indigo-500/20 rounded-full blur-3xl animate-pulse delay-1000"></div>
    <div class="absolute top-3/4 left-1/3 w-64 h-64 bg-emerald-500/20 rounded-full blur-3xl animate-pulse delay-2000"></div>
  </div>
  
  <Container>
    <div class="relative z-10 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="space-y-8 animate-slide-up">
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white leading-tight">
          <span class="bg-gradient-to-r from-purple-600 to-indigo-600 bg-clip-text text-transparent drop-shadow-sm">{content.hero.headline}</span>
        </h1>
        
        <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed max-w-2xl">
          {content.hero.subheadline}
        </p>
        
        <!-- Stats -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 pt-4 justify-items-center">
          <div class="glass-card rounded-xl px-4 py-3 sm:px-6 sm:py-4 text-center hover:scale-105 transition-all duration-300 w-full max-w-xs flex flex-col justify-center">
            <div class="text-xl sm:text-2xl font-bold bg-gradient-to-r from-purple-600 to-indigo-600 bg-clip-text text-transparent">500+</div>
            <div class="text-xs sm:text-sm text-gray-500 dark:text-gray-400">Colaboradores</div>
          </div>
          <div class="glass-card rounded-xl px-4 py-3 sm:px-6 sm:py-4 text-center hover:scale-105 transition-all duration-300 w-full max-w-xs flex flex-col justify-center">
            <div class="text-xl sm:text-2xl font-bold bg-gradient-to-r from-emerald-600 to-teal-600 bg-clip-text text-transparent">73%</div>
            <div class="text-xs sm:text-sm text-gray-500 dark:text-gray-400">Melhoria na RetenÃ§Ã£o</div>
          </div>
          <div class="glass-card rounded-xl px-4 py-3 sm:px-6 sm:py-4 text-center hover:scale-105 transition-all duration-300 w-full max-w-xs flex flex-col justify-center">
            <div class="text-xl sm:text-2xl font-bold bg-gradient-to-r from-purple-600 to-indigo-600 bg-clip-text text-transparent">40%</div>
            <div class="text-xs sm:text-sm text-gray-500 dark:text-gray-400">Mais Engajamento</div>
          </div>
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 pt-6">
          <button 
            id="hero-trial-button"
            class="w-full sm:w-auto inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 text-base sm:text-lg font-semibold rounded-xl text-white bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 dark:focus:ring-offset-gray-900 transition-all duration-300 shadow-xl shadow-purple-500/25 hover:shadow-purple-500/40 hover:scale-105 active:scale-95"
          >
            {content.hero.ctaPrimary}
            <span class="ml-2">â†’</span>
          </button>
          
          <a 
            href="/demonstracao"
            class="w-full sm:w-auto inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 text-base sm:text-lg font-semibold rounded-xl text-gray-700 dark:text-gray-200 glass-card hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 dark:focus:ring-offset-gray-900 transition-all duration-300 border border-white/20 dark:border-gray-600/30"
          >
            {content.hero.ctaSecondary}
            <span class="ml-2">ğŸ‘ï¸</span>
          </a>
        </div>
      </div>
      
      <!-- Visual Content -->
      <div class="relative animate-float">
        <!-- Dashboard Mockup with glassmorphism -->
        <div class="relative liquid-glass rounded-2xl p-6 transform rotate-3 hover:rotate-0 transition-transform duration-500 hover:shadow-2xl hover:shadow-purple-500/20">
          <div class="bg-gradient-to-r from-purple-600 to-indigo-600 rounded-xl p-6 text-white relative overflow-hidden">
            <!-- Glassmorphism overlay on dashboard -->
            <div class="absolute inset-0 bg-white/10 backdrop-blur-sm"></div>
            
            <div class="relative z-10">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold drop-shadow-sm">Dashboard Valorize</h3>
                <div class="flex space-x-2">
                  <div class="w-3 h-3 bg-white/40 rounded-full backdrop-blur-sm"></div>
                  <div class="w-3 h-3 bg-white/40 rounded-full backdrop-blur-sm"></div>
                  <div class="w-3 h-3 bg-white/40 rounded-full backdrop-blur-sm"></div>
                </div>
              </div>
              
              <!-- Mock Charts with glassmorphism -->
              <div class="space-y-4">
                <div class="bg-white/20 backdrop-blur-sm rounded-lg p-4 border border-white/20">
                  <div class="text-sm opacity-90 mb-2 font-medium">Engajamento Mensal</div>
                  <div class="flex items-end space-x-2 h-16">
                    <div class="bg-white/50 backdrop-blur-sm rounded w-4 h-8 shadow-lg"></div>
                    <div class="bg-white/70 backdrop-blur-sm rounded w-4 h-12 shadow-lg"></div>
                    <div class="bg-white/90 backdrop-blur-sm rounded w-4 h-16 shadow-lg"></div>
                    <div class="bg-white backdrop-blur-sm rounded w-4 h-14 shadow-lg"></div>
                    <div class="bg-white/80 backdrop-blur-sm rounded w-4 h-10 shadow-lg"></div>
                  </div>
                </div>
                
                <div class="bg-white/20 backdrop-blur-sm rounded-lg p-4 border border-white/20">
                  <div class="text-sm opacity-90 mb-2 font-medium">Elogios da Semana</div>
                  <div class="text-2xl font-bold drop-shadow-sm">127</div>
                  <div class="text-xs opacity-80">+23% vs semana passada</div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Floating Elements with glassmorphism -->
        <div class="absolute -top-4 -right-4 glass-card rounded-full p-4 animate-bounce hover:scale-110 transition-transform duration-300">
          <span class="text-2xl drop-shadow-sm">ğŸ†</span>
        </div>
        <div class="absolute -bottom-4 -left-4 glass-emerald rounded-full p-4 animate-pulse hover:scale-110 transition-transform duration-300">
          <span class="text-2xl drop-shadow-sm">ğŸ’</span>
        </div>
        <div class="absolute top-1/2 -right-8 glass-purple rounded-full p-3 animate-pulse delay-1000 hover:scale-110 transition-transform duration-300">
          <span class="text-xl drop-shadow-sm">âœ¨</span>
        </div>
      </div>
    </div>
  </Container>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="glass-overlay rounded-full p-3">
      <svg class="w-6 h-6 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>