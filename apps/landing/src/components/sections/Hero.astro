---
import Container from '../ui/Container.astro'
import { content } from '../../constants/content'
---

<section class="relative min-h-screen flex items-center bg-gradient-to-br from-blue-50 via-white to-purple-50">
  <Container>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="space-y-6 animate-slide-up">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
          <span class="text-gradient">{content.hero.headline}</span>
        </h1>
        
        <p class="text-xl text-gray-600 leading-relaxed max-w-2xl">
          {content.hero.subheadline}
        </p>
        
        <!-- Stats -->
        <div class="flex flex-wrap gap-8 pt-4">
          <div class="text-center">
            <div class="text-2xl font-bold text-brand-primary-600">500+</div>
            <div class="text-sm text-gray-500">Colaboradores</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-brand-primary-600">73%</div>
            <div class="text-sm text-gray-500">Melhoria na RetenÃ§Ã£o</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-brand-primary-600">40%</div>
            <div class="text-sm text-gray-500">Mais Engajamento</div>
          </div>
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 pt-6">
          <button 
            id="hero-trial-button"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold rounded-xl text-white bg-gradient-brand hover:bg-gradient-brand-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-primary-500 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
          >
            {content.hero.ctaPrimary}
            <svg class="ml-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </button>
          
          <a 
            href="/demonstracao"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold rounded-xl text-gray-700 bg-white border-2 border-gray-300 hover:border-brand-primary-300 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-primary-500 transition-all duration-200"
          >
            {content.hero.ctaSecondary}
            <svg class="ml-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h.01M19 10a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Visual Content -->
      <div class="relative animate-float">
        <!-- Dashboard Mockup -->
        <div class="relative bg-white rounded-2xl shadow-2xl p-6 transform rotate-3 hover:rotate-0 transition-transform duration-500">
          <div class="bg-gradient-brand rounded-xl p-6 text-white">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold">Dashboard Valorize</h3>
              <div class="flex space-x-2">
                <div class="w-3 h-3 bg-white/30 rounded-full"></div>
                <div class="w-3 h-3 bg-white/30 rounded-full"></div>
                <div class="w-3 h-3 bg-white/30 rounded-full"></div>
              </div>
            </div>
            
            <!-- Mock Charts -->
            <div class="space-y-4">
              <div class="bg-white/20 rounded-lg p-4">
                <div class="text-sm opacity-80 mb-2">Engajamento Mensal</div>
                <div class="flex items-end space-x-2 h-16">
                  <div class="bg-white/40 rounded w-4 h-8"></div>
                  <div class="bg-white/60 rounded w-4 h-12"></div>
                  <div class="bg-white/80 rounded w-4 h-16"></div>
                  <div class="bg-white rounded w-4 h-14"></div>
                  <div class="bg-white/70 rounded w-4 h-10"></div>
                </div>
              </div>
              
              <div class="bg-white/20 rounded-lg p-4">
                <div class="text-sm opacity-80 mb-2">Elogios da Semana</div>
                <div class="text-2xl font-bold">127</div>
                <div class="text-xs opacity-70">+23% vs semana passada</div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Floating Elements -->
        <div class="absolute -top-4 -right-4 bg-yellow-400 rounded-full p-3 animate-bounce">
          <span class="text-2xl">ğŸ†</span>
        </div>
        <div class="absolute -bottom-4 -left-4 bg-green-400 rounded-full p-3 animate-pulse">
          <span class="text-2xl">ğŸ’</span>
        </div>
      </div>
    </div>
  </Container>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>