---
interface Props {
  variant?: 'default' | 'feature' | 'pricing'
  className?: string
}

const { variant = 'default', className = '' } = Astro.props
---

<div class:list={[
  'rounded-xl border bg-white shadow-sm transition-all duration-200',
  {
    'border-gray-200 hover:shadow-md': variant === 'default',
    'border-gray-200 hover:shadow-lg hover:scale-105': variant === 'feature',
    'border-2 border-gray-200 hover:shadow-xl': variant === 'pricing',
  },
  className
]}>
  <slot />
</div>