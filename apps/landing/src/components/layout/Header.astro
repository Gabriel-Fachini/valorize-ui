---
import Container from '../ui/Container.astro'
import Logo from '../icons/Logo.astro'
import "../../styles/global.css"
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-200">
  <Container>
    <nav class="flex items-center justify-between py-4">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <Logo className="text-brand-primary-600" size={32} />
        <span class="text-2xl font-bold text-gray-900">Valorize</span>
      </a>
      
      <!-- Navigation Links -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="#features" class="text-gray-600 hover:text-brand-primary-600 transition-colors">
          Funcionalidades
        </a>
        <a href="#pricing" class="text-gray-600 hover:text-brand-primary-600 transition-colors">
          Preços
        </a>
        <a href="/demonstracao" class="text-gray-600 hover:text-brand-primary-600 transition-colors">
          Demonstração
        </a>
        <a href="/contato" class="text-gray-600 hover:text-brand-primary-600 transition-colors">
          Contato
        </a>
      </div>
      
      <!-- CTA Buttons -->
      <div class="flex items-center space-x-4">
        <a 
          href="#" 
          id="trial-button"
          class="hidden sm:inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-brand hover:bg-gradient-brand-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-primary-500 transition-all duration-200"
        >
          Teste Gratuito
        </a>
        
        <!-- Mobile menu button -->
        <button 
          id="mobile-menu-button"
          class="md:hidden p-2 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-100"
          aria-label="Menu"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </nav>
    
    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden pb-4">
      <div class="space-y-2">
        <a href="#features" class="block px-3 py-2 text-gray-600 hover:text-brand-primary-600 transition-colors">
          Funcionalidades
        </a>
        <a href="#pricing" class="block px-3 py-2 text-gray-600 hover:text-brand-primary-600 transition-colors">
          Preços
        </a>
        <a href="/demonstracao" class="block px-3 py-2 text-gray-600 hover:text-brand-primary-600 transition-colors">
          Demonstração
        </a>
        <a href="/contato" class="block px-3 py-2 text-gray-600 hover:text-brand-primary-600 transition-colors">
          Contato
        </a>
        <a 
          href="#" 
          class="block w-full mt-4 px-4 py-2 text-center text-sm font-medium rounded-lg text-white bg-gradient-brand hover:bg-gradient-brand-hover transition-all duration-200"
        >
          Teste Gratuito
        </a>
      </div>
    </div>
  </Container>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button')
  const mobileMenu = document.getElementById('mobile-menu')
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden')
  })
  
  // Close mobile menu when clicking on links
  const mobileLinks = mobileMenu?.querySelectorAll('a')
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden')
    })
  })
</script>