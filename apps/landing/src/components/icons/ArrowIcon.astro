---
interface Props {
  className?: string
  size?: number
  direction?: 'right' | 'left' | 'up' | 'down'
}

const { className = '', size = 16, direction = 'right' } = Astro.props

const rotations = {
  right: '0',
  down: '90',
  left: '180',
  up: '270'
}
---

<svg 
  width={size} 
  height={size} 
  viewBox="0 0 24 24" 
  fill="none" 
  xmlns="http://www.w3.org/2000/svg"
  class={className}
  style={`transform: rotate(${rotations[direction]}deg)`}
>
  <path 
    d="M5 12H19M19 12L12 5M19 12L12 19" 
    stroke="currentColor" 
    stroke-width="2" 
    stroke-linecap="round" 
    stroke-linejoin="round"
  />
</svg>